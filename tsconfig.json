// path: /home/soma/workspace/express-tuto/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./src/types", "./node_modules/@types"],

    // パスエイリアスの設定
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"] // "@/" を "src/" のエイリアスとして設定
    }
  },
  "include": ["src"]
}
